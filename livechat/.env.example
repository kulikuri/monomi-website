# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database/chat.db

# Session Configuration
SESSION_SECRET=your-secret-key-here-change-in-production

# Admin Configuration
ADMIN_EMAIL=admin@digimax.com
ADMIN_PASSWORD=admin123

# Chat Configuration
MAX_MESSAGE_LENGTH=1000
MAX_CONVERSATIONS_PER_USER=5

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500

# AI Configuration
# Provider options: rag, ollama, huggingface, openai, claude
AI_PROVIDER=rag
AI_MODEL=sentence-transformers/all-MiniLM-L6-v2

# HuggingFace Configuration (for RAG)
# Get your API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# RAG Configuration
RAG_SIMILARITY_THRESHOLD=0.8
RAG_TOP_K=3
RAG_FALLBACK_MESSAGE=Maaf mungkin pertanyaan yang anda ajukan tidak sesuai, saya akan hubungkan ke live agent

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=digimax_knowledge_base

# Legacy AI Configuration (for other providers)
# AI_TEMPERATURE=0.7
# AI_MAX_TOKENS=500
# OLLAMA_URL=http://localhost:11434
# AI_API_KEY=